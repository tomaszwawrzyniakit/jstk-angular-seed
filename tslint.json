{
  "rulesDirectory": ["codelyzer", "node_modules/rxjs-tslint-rules/dist/rules"],
  "extends": ["tslint:recommended", "codelyzer"],
  "rules": {
    "array-type": false,
    "arrow-parens": false,
    "deprecation": {
      "severity": "error"
    },
    "interface-over-type-literal": true,
    "class-name": true,
    "callable-types": true,
    "arrow-return-shorthand": true,
    "component-class-suffix": true,
    "contextual-lifecycle": true,
    "directive-class-suffix": true,
    "import-blacklist": [true, "rxjs/Rx"],
    "interface-name": false,
    "max-classes-per-file": false,
    "max-line-length": [
      true,
      {
        "limit": 140,
        "ignore-pattern": "^import |^export | implements "
      }
    ],
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "no-consecutive-blank-lines": false,
    "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
    "no-empty": false,
    "no-inferrable-types": [true, "ignore-params"],
    "no-arg": true,

    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [true, "single"],
    "object-literal-key-quotes": [true, "as-needed"],
    "radix": true,
    "no-non-null-assertion": true,
    "no-redundant-jsdoc": true,
    "no-switch-case-fall-through": true,
    "no-construct": true,
    "no-duplicate-super": true,
    "no-var-requires": false,
    "no-empty-interface": true,
    "no-eval": true,
    "no-misused-new": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-string-throw": true,
    "no-trailing-whitespace": true,
    "no-unnecessary-initializer": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "variable-name": [
      true,
      "require-const-for-all-caps",
      "check-format",
      "allow-leading-underscore"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "trailing-comma": false,
    "no-conflicting-lifecycle": true,
    "no-debugger": true,
    "no-input-rename": true,
    "no-inputs-metadata-property": true,
    "no-output-native": true,
    "no-output-on-prefix": true,
    "no-output-rename": true,
    "no-outputs-metadata-property": true,
    "use-lifecycle-interface": true,
    "no-host-metadata-property": true,
    "use-pipe-transform-interface": true,
    "newline-per-chained-call": false,
    "template-banana-in-box": true,
    "template-no-negated-async": true,
    "directive-selector": [true, "attribute", "jstk", "camelCase"],
    "component-selector": [true, "element", "jstk", "kebab-case"],
    "pipe-prefix": [true, "jstk"]
  },
  "prefer-readonly": true,
  "prefer-inline-decorator": false,
  "restrict-plus-operands": false,
  "use-isnan": true,
  "no-implicit-dependencies": false,
  "no-angle-bracket-type-assertion": false,
  "no-invalid-this": true,
  "import-spacing": true,
  "indent": [true, "spaces"]
}
